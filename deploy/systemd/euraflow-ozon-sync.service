[Unit]
Description=EuraFlow OZON Sync Service
Documentation=https://github.com/your-org/EuraFlow
After=network.target postgresql.service redis.service euraflow-backend.service
Requires=postgresql.service redis.service

[Service]
Type=simple
User=euraflow
Group=euraflow
WorkingDirectory=/opt/euraflow

# 环境变量
EnvironmentFile=/opt/euraflow/.env
Environment="PATH=/opt/euraflow/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
Environment="PYTHONPATH=/opt/euraflow"

# 主进程 - OZON同步服务
ExecStart=/opt/euraflow/venv/bin/python -m plugins.ef.channels.ozon.services.sync_service

# 停止服务
ExecStop=/bin/kill -s TERM $MAINPID
TimeoutStopSec=30

# 重启策略
Restart=always
RestartSec=30
StartLimitInterval=600
StartLimitBurst=3

# 资源限制
LimitNOFILE=65536
LimitNPROC=4096

# 安全设置
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/euraflow /var/log/euraflow /tmp

# 性能调优
CPUAccounting=true
MemoryAccounting=true
MemoryMax=512M
TasksMax=20

# 日志
StandardOutput=append:/var/log/euraflow/ozon-sync.log
StandardError=append:/var/log/euraflow/ozon-sync-error.log

[Install]
WantedBy=multi-user.target