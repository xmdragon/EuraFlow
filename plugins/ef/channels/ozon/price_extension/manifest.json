{
  "manifest_version": 3,
  "name": "OZON 真实售价计算器",
  "version": "1.0.0",
  "description": "在OZON商品页面显示计算后的真实售价",
  "author": "EuraFlow",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://www.ozon.ru/*",
    "https://*.ozon.ru/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.ozon.ru/product/*",
        "https://*.ozon.ru/product/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
