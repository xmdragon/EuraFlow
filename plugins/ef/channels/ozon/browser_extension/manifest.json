{
  "manifest_version": 3,
  "name": "EuraFlow OZON选品助手",
  "version": "1.5.0",
  "description": "智能采集OZON商品数据，支持上品帮和毛子ERP数据融合，商品详情页显示真实售价",
  "permissions": [
    "storage",
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "https://*.ozon.ru/*",
    "https://euraflow.hjdtrading.com/*",
    "http://localhost:8000/*",
    "https://*.shopbang.cn/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.ozon.ru/*"],
      "js": ["src/content/main.ts"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content/ui/*"],
      "matches": ["https://www.ozon.ru/*"]
    }
  ]
}
